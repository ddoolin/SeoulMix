extends layout-in

block content
    #map_canvas(style='width: 100%; height: 100%;')
    #banner_main
      #banner_logo
        a(href='') SeoulMix
      span.divider
      #banner_welcome
        #banner_welcome_text
          h3 Hello, #{userdata.user}!
          p#welcome_text Welcome to SeoulMix! Get started by adding details to your profile or creating a new event.
      div.main-button-container
        button#create_event(data-toggle="modal", href="#create_event_modal").btn
            | Create Event
        button#view_profile(data-toggle="modal", href="#profile_modal").btn
            | Edit Profile

    include modals/profile
    include modals/create-event

block scripts
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAG1ZYoDAzhL0uivXehR0_5tDLpCcLOaqQ&sensor=false')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
    script(src="vendor/jquery.form.js")
    script(src='vendor/bootstrap.js')
    script(src="js/front.js")
    script(src="js/views/homeView.js")
    script(src="js/controllers/homeController.js")