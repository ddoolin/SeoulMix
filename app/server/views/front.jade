extends layout-out

block content
    #map_canvas(style='width: 100%; height: 100%;')
    #banner_main
      a#banner_logo(href='')
        p SeoulMix
      span.divider
      #banner_welcome
          p#banner_welcome_text
            | In a city of over 10 million people, meeting new people has never been easier.
            br
            | Find fellow <b>Seoulites</b> to do & share with, or open your own event for others.
      #login_container
        form#login_form(method="post")
          fieldset(name="user-login")
            input#login_username(required='required', pattern='.{4,30}', title='4 character minimum', type='text', name='login-username', placeholder='username', tabindex="1")
            label.remember-me
              | Remember
              input#remember_me(type='checkbox')
            br
            input#login_password(required='required', pattern='.{6,}', title='6 character minimum', type='password', name='login-password', placeholder='password', autocomplete='off', tabindex="2")
            input#login_submit.btn.btn-small(type='submit', value='Login')
            a#lost_password(data-toggle='modal', href='#lostpass_modal') Lost User/Pass?
      #registration_container
        p#new_signup_text
          b New?
          a(href="http://127.0.0.1/users/reset?e=doolin.nc@gmail.com&p=sha512$70dbeb23f44e0925$2$2602405453f53bf4dacb625d9480df31a479f8d50b42272eb0f051f0fe58a0388542e5f51ef961d6159a09d8223fe89661a7cf0a8a3aad46126239ac52d1740a") Click Me!
        a#register_btn.btn(data-toggle='modal', href='#registration_modal') Sign Up

    include modals/login-error
    include modals/lost-password
    include modals/registration-form